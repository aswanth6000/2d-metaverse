{
  "name": "2d-metaverse",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
     "db:migrate": "dotenv -e .env -- bunx prisma migrate dev --schema packages/db/prisma/schema.prisma"
  },
  "devDependencies": {
    "@types/ws": "^8.18.1",
    "dotenv-cli": "^10.0.0",
    "prettier": "^3.6.2",
    "prisma": "^6.14.0",
    "turbo": "^2.5.6",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.2.19",
  "workspaces": [
    "apps/*",
    "apps/*/*",
    "packages/*",
    "packages/*/*"
  ],
  "dependencies": {
    "@prisma/client": "6.14.0",
    "ws": "^8.18.3"
  }
}
